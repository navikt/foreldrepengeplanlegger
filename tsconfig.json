{
	"compilerOptions": {
		"outDir": "build/dist",
		"module": "esnext",
		"target": "es5",
		"lib": ["es6", "dom"],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"baseUrl": "./src",
		"typeRoots": ["./node_modules/@types", "./src/@types"],
		"paths": {
			"shared/*": ["shared/*"],
			"components/*": ["app/components/*"],
			"utils/*": ["app/utils/*"]
		}
	},
	"exclude": ["node_modules", "build", "scripts", "config", "jest", "src/build", "src/config"]
}
